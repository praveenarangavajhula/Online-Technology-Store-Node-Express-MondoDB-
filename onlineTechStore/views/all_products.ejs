 <% include _layouts/header %>

<div class="row products">
    
    <% products.forEach(function(p){ %>
        <% if(p.flag != 'false') { %>
        
            <div class="col-xs-12 col-md-4 p">
                <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                    <!--<img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">-->

                    <div class="product-img" style="background-image:url('/product_images/<%= p.id %>/<%= p.image %>')">
                    </div>                    
                </a>
                <h4><%= p.title %> </h4>
          
                <h5>$<%= parseFloat(p.price).toFixed(2) %></h5>
                <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
            </div>
              <% } else { %>
          
         <% } %>
       

        <% }); %>
    
</div>

			<% if (pageLength > 0) { %>
                <ul class="pagination text-center">
                    <% if (current == 1) { %>
                        <li class="disabled"><a>First</a></li>
                    <% } else { %>
                        <li><a href="/products/all/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="disabled"><a>...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pageLength; i++) { %>
                        <% if (i == current) { %>
                            <li class="active"><a><%= i %></a></li>
                        <% } else { %>
                            <li><a href="/products/all/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pageLength) { %>
                            <li class="disabled"><a>...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pageLength) { %>
                        <li class="disabled"><a>Last</a></li>
                    <% } else { %>
                        <li><a href="/products/all/<%= pageLength %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>

<% include _layouts/footer %>