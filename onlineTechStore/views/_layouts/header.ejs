  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/" target="_blank">Tech Store</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% pages.forEach(function(page){ %>
                <% if(page.slug == "home") { %>
                  <li><a href="/"><%= page.title %></a></li>
                <% } else{ %>
                  <li><a href="<%= page.slug %>"><%= page.title %></a></li>
              <% } %>
            <% }); %>
          </ul>
        <form class="navbar-form navbar-left" method = "GET" class="form-inline" action="">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="search">
                <div class="input-group-btn">
                  <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                  </button>
                </div>
              </div>
        </form>
          <ul class="nav navbar-nav navbar-right">
              <% if (user) { %>
              <li><a href="/users/logout"><%= user.username %></a></li>
              <li><a href="/users/logout">Sign Out</a></li>
              <% } else {%>
              <li><a href="/users/register">Register</a></li>
              <li><a href="/users/login">Sign In</a></li>
              <% } %>
              <% if (user && user.admin == 1) { %>
              <li><a href="/admin/pages">Admin</a></li>
              <% }%>
              <li>
                  <a href="/cart/checkout">My Cart (
                      <% if (typeof cart !== "undefined") { %>
                      <%= cart.length %>
                      <% } else {%>
                      0
                      <% } %>
                  )</a>
              </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <main class="container">
    <%- messages('messages', locals) %>

    <% if (errors) {%>
      <% errors.forEach(function(error) { %>
      <div class="alert alert-danger">
          <%= error.msg %>
      </div>
      <% });%>
    <% }%>
    <div class="row">
      <div class="col-xs-12 col-md-3">
          <h3>Categories</h3>
          <ul class="list-group">
              <li class="list-group-item"><a href="/products/all/1">All products</a></li>
              <% categories.forEach(function(c){ %>
                  <li class="list-group-item"><a href="/products/<%= c.slug %>"><%= c.title %></a></li>
              <% }); %>
          </ul>
      </div>
